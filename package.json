{
  "name": "Shouty",
  "version": "1.0.0",
  "description": "Shouty exercise in JavaScript",
  "main": "index.js",
  "watch": {
    "mocha": "{lib,test}/**/*.js",
    "cucumber": {
      "patterns": [
        "lib",
        "features"
      ],
      "extensions": "js,feature"
    }
  },
  "scripts": {
    "mocha": "mocha",
    "cucumber": "cucumber-js --format node_modules/cucumber-pretty/",
    "test": "npm-run-all --silent -c mocha cucumber",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:cucumber-ltd/shouty.js.git"
  },
  "keywords": [
    "shouty",
    "bdd",
    "cucumber"
  ],
  "author": "Cucumber Ltd",
  "bugs": {
    "url": "https://github.com/cucumber-ltd/shouty.js/issues"
  },
  "homepage": "https://github.com/cucumber-ltd/shouty.js",
  "devDependencies": {
    "cucumber": "^5.1.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "npm-watch": "^0.11.0"
  },
  "dependencies": {
    "cucumber-pretty": "^1.4.4"
  }
}
